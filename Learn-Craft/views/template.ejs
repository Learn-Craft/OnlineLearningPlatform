<!DOCTYPE html>
<html lang="en">
<head id="head">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="/CSS/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <title><%= title %></title>
</head>
<body>
    <header class="header">
        <section class="flex">
            <a href="home.html" class="logo">Learn-Craft</a>

            <form action="/search" method="POST" class="search-form">
                <input type="text" name="search_box" placeholder="Search Courses...." required maxlength="100">
                <button type="submit" class="fas fa-search" name="search_box"></button>
            </form>

            <div class="icons">
                <div id="menu-btn" class="fas fa-bars"></div>
                <div id="search-btn" class="fas fa-search"></div>
                <div id="user-btn" class="fas fa-user"></div>
                <div id="language-btn" class="fas fa-language"></div>
                <div id="toggle-btn" class="fas fa-sun"></div>
            </div>
            <div class="profile">
                <img src="/IMG/pic-1.jpg" alt="">
                <h3><%= user ? user.name : 'Guest' %></h3>
                <span>Student</span>
                <% if (user) { %>
                <a href="profile.html" class="btn">View Profile</a>
                <% } else { %>
                <div class="flex-btn">
                    <a href="login.html" class="option-btn">login</a>
                    <a href="register.html" class="option-btn">Register</a>
                </div>
                <% } %>
            </div>
        </section>
    </header>

    <!-- side bar section starts -->
    <div class="side-bar">
        <div class="close-side-bar">
            <i class="fas fa-times"></i>
        </div>
        <div class="profile">
            <img src="/IMG/pic-1.jpg" alt="">
            <h3><%= user ? user.name : 'Guest' %></h3>
            <span>Student</span>
            <% if (user) { %>
            <a href="profile.html" class="btn">View Profile</a>
            <% } %>
        </div>
        <nav class="navbar">
            <a href="home.html"><i class="fas fa-home"></i><span>Home</span></a>
            <a href="about.html"><i class="fas fa-question"></i><span>About Us</span></a>
            <a href="courses.html"><i class="fas fa-graduation-cap"></i><span>Courses</span></a>
            <a href="teachers.html"><i class="fas fa-chalkboard-user"></i><span>Tutors</span></a>
            <a href="blog.html"><i class="fas fa-blog"></i><span>Blogs</span></a>
            <a href="contact.html"><i class="fas fa-headset"></i><span>Contact Us</span></a>
        </nav>
    </div>
    <!-- side bar section ends -->

    <!-- Main content -->
    <div class="content">
        <%= content %>
    </div>

    <!-- footer section starts -->
    <footer class="footer">
        <div class="footer-1">
            <div>
                <a href="#">Privacy Policy</a>
            </div>
            <div>
                <a href="#">Cookies</a>
            </div>
            <div>
                <a href="#">Use and Help</a>
            </div>
            <div>
                <a href="#">About us</a>
            </div>
            <div>
                <a href="#">Term of Use</a>
            </div>
        </div>
        &copy; copyright @ 2022 by <span>Hasti Donga</span> | all rights reserved!
    </footer>
    <!-- footer section ends -->
    <script type="text/javascript" src="/JS/javascript.js"></script>
</body>
</html>
