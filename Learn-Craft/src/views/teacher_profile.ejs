<!DOCTYPE html>
<html lang="en">
  <head id="head">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" >
    <meta name="robots" content="noindex, nofollow" >
    <!-- add the CSS -->
    <link rel="stylesheet" href="../CSS/style.css">
    <!-- FOnt Awesome Link-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <title>Teachers Profile Page</title>
  </head>
  <body>
    <!-- header section Starts -->
    <header class="header"></header>
    <!-- header section ends -->
    <!-- side bar section starts -->
    <div class="side-bar">
        <div class="close-side-bar">
            <i class="fas fa-times"></i>
        </div>

        <div class="profile">
            <img src="/IMG/defaltloginimage.png" alt="">
            <% if (user) { %>
                <h3><%= user.name %></h3>
                <span>Student</span>
                <a href="profile.ejs" class="btn">View Profile</a>
                <a href="/api/auth/logout" class="btn">Logout</a>
            <% } else { %>
                <div class="flex-btn">
                    <a href="login.ejs" class="option-btn">login</a>
                    <a href="register.ejs" class="option-btn">Register</a>
                </div>
            <% } %>
        </div>

        <nav class="navbar">
            <a href="home.ejs"><i class="fas fa-home"></i><span>Home</span></a>
            <a href="about.ejs"><i class="fas fa-question"></i><span>About Us</span></a>
            <a href="courses.ejs"><i class="fas fa-graduation-cap"></i><span>Courses</span></a>
            <a href="teachers.ejs"><i class="fas fa-chalkboard-user"></i><span>Tutors</span></a>
            <a href="blog.ejs"><i class="fas fa-blog"></i><span>Blogs</span></a>
            <a href="contact.ejs"><i class="fas fa-headset"></i><span>Contact Us</span></a>
        </nav>
    </div>
  <!-- side bar section ends -->
   
  <!-- teachers profile section starts -->

  <section class="tutor-profile">

    <h1 class="heading">Profile Details</h1>

    <div class="details">
      <div class="tutor">
        <img src="../IMG/pic-2.jpg" alt="">
        <h3>John Deo</h3>
        <span>Developer</span>
      </div>
      <div class="flex">
        <p> Total Playlists: <span>4</span></p>
        <p> Total Videos: <span>18</span></p>
        <p> Total Likes: <span>1208</span></p>
        <p> Total Comments: <span>52</span></p>
      </div>
    </div>
  </section>

  <!-- teachers profile section ends -->

  <!-- Courses Section starts -->
  <section class="courses">
    <h1 class="heading">Our Popular Courses</h1>

    <div class="box-container">

      <div class="box">
        <img src="../IMG/thumb-1.png" class="thumb" alt="thumb1">
        <h3 class="title">Complete Html Tutorial</h3>
        <a href="playlist.ejs" class="inline-btn">View Playlist</a>
      </div>

      <div class="box">
        <img src="../IMG/thumb-2.png" class="thumb" alt="thumb1">
        <h3 class="title">Complete CSS Tutorial</h3>
        <a href="playlist.ejs" class="inline-btn">View Playlist</a>
      </div>

      <div class="box">
        <img src="../IMG/thumb-3.png" class="thumb" alt="thumb1">
        <h3 class="title">Complete JS Tutorial</h3>
        <a href="playlist.ejs" class="inline-btn">View Playlist</a>
      </div>

      <div class="box">          
        <img src="../IMG/thumb-4.png" class="thumb" alt="thumb1">
        <h3 class="title">Complete Bootstrap Tutorial</h3>
        <a href="playlist.ejs" class="inline-btn">View Playlist</a>
      </div>

    </div>
  <!-- Courses Section ends -->

   <!-- footer section starts -->

   
    <footer class="footer"></footer>
    <!-- footer section ends -->
    <!-- custom js file link  -->
    <script type="text/javascript" src="../JS/javascript.js"></script>
  </body>
</html>
