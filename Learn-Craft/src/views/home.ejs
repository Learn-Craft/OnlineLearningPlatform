<!DOCTYPE html>
<html lang="en">
<head id="head">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <!-- add the CSS -->
    <link rel="stylesheet" href="/CSS/style.css">
    <!-- FOnt Awesome Link-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <title>Home Page</title>
</head>
<body>
    <!-- header section Starts -->
    <header class="header"></header>
    <!-- header section ends -->
    <!-- side bar section starts -->
    <div class="side-bar">
        <div class="close-side-bar">
            <i class="fas fa-times"></i>
        </div>

        <div class="profile">
            <img src="/IMG/defaltloginimage.png" alt="">
            <% if (user) { %>
                <h3><%= user.name %></h3>
                <span>Student</span>
                <a href="profile.ejs" class="btn">View Profile</a>
                <a href="/api/auth/logout" class="btn">Logout</a>
            <% } else { %>
                <div class="flex-btn">
                    <a href="login.ejs" class="option-btn">login</a>
                    <a href="register.ejs" class="option-btn">Register</a>
                </div>
            <% } %>
        </div>

        <nav class="navbar">
            <a href="home.ejs"><i class="fas fa-home"></i><span>Home</span></a>
            <a href="about.ejs"><i class="fas fa-question"></i><span>About Us</span></a>
            <a href="courses.ejs"><i class="fas fa-graduation-cap"></i><span>Courses</span></a>
            <a href="teachers.ejs"><i class="fas fa-chalkboard-user"></i><span>Tutors</span></a>
            <a href="blog.ejs"><i class="fas fa-blog"></i><span>Blogs</span></a>
            <a href="contact.ejs"><i class="fas fa-headset"></i><span>Contact Us</span></a>
        </nav>
    </div>
    <!-- side bar section ends -->

    <!-- Home display page starts -->
    <section class="home">
        <div class="image">
            <img src="/IMG/home-img.png" alt="">
        </div>
        <div class="content">
            <h3>Your course to success</h3>
            <p>Learn-Craft is an innovative global edtech leader at the intersection of content, media and technology. Join us in shaping future in education.</p>
            <a href="#" class="btn">Get Started</a>
        </div>
    </section>
    <!-- Home display page ends -->

    <!-- Quick select section starts -->
    <section class="quick-select">
        <h1 class="heading"> Quick Options</h1>
        <div class="box-container">
            <div class="box">
                <h3 class="title">Likes and Comments</h3>
                <p>Total Likes: <span>14</span></p>
                <a href="#" class="inline-btn">View Likes</a>
                <p>Total Comments: <span>5</span></p>
                <a href="#" class="inline-btn">View Comments</a>
                <p>Saved Playlist: <span>3</span></p>
                <a href="#" class="inline-btn">View Playlists</a>
            </div>
            <div class="box">
                <h3 class="title">Top Categories</h3>
                <div class="flex">
                    <a href="web_development.ejs"><i class="fas fa-code"></i><span> Development</span></a>
                    <a href="business.ejs"><i class="fas fa-chart-simple"></i><span>Business</span></a>
                    <a href="design.ejs"><i class="fas fa-pen"></i><span>Design</span></a>
                    <a href="marketing.ejs"><i class="fas fa-chart-line"></i><span>Marketing</span></a>
                    <a href="personal_development.ejs"><i class="fas fa-face-smile"></i><span>Personal Development</span></a>
                    <a href="it.ejs"><i class="fas fa-computer"></i><span>IT</span></a>
                    <a href="software.ejs"><i class="fas fa-cog"></i><span>Software</span></a>
                    <a href="science.ejs"><i class="fas fa-vial"></i><span>Science</span></a>
                </div>
            </div>
            <div class="box">
                <h3 class="title">Popular Topics</h3>
                <div class="flex">
                    <a href="playlist.ejs"><i class="fab fa-html5"></i><span> HTML5</span></a>
                    <a href="playlist.ejs"><i class="fab fa-css3"></i><span>CSS</span></a>
                    <a href="playlist.ejs"><i class="fab fa-js"></i><span>Javascript</span></a>
                    <a href="playlist.ejs"><i class="fab fa-react"></i><span>React</span></a>
                    <a href="playlist.ejs"><i class="fab fa-php"></i><span>PHP</span></a>
                    <a href="playlist.ejs"><i class="fab fa-bootstrap"></i><span>Bootstrap</span></a>
                </div>
            </div>
        </div>
    </section>
    <!-- Quick select section ends -->

    <!-- Courses Section starts -->
