                </div>
                <img src="/IMG/thumb-6.png" class="thumb" alt="thumb1">
                <h3 class="title">Complete SASS Tutorial</h3>
                <a href="playlist.ejs" class="inline-btn">View Playlist</a>
            </div>
        </div>
        <div class="more-btn">
            <a href="courses.ejs" class="inline-option-btn">View More</a>
        </div>
    </section>
    <!-- Courses Section ends -->

    <!-- footer section starts -->
    <footer class="footer"></footer>
    <!-- footer section ends -->
    <!-- custom js file link  -->
    <script type="text/javascript" src="../JS/javascript.js"></script>
